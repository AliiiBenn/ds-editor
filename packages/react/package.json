{
  "name": "@ds-editor/react",
  "version": "0.1.0",
  "description": "Enhanced Monaco-based code editor React component",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "test": "vitest",
    "lint": "eslint src"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "dependencies": {
    "@ds-editor/core": "workspace:*",
    "@monaco-editor/react": "^4.6.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "vitest": "^1.2.2"
  },
  "keywords": [
    "react",
    "monaco-editor",
    "code-editor",
    "ide"
  ],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
} 